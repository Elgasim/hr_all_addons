<odoo>
    <data>

        <record model="ir.module.category" id="appness_hr_settings">
            <field name="name">HR Settings</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_manage_top_management" model="res.groups">
            <field name="name">Manage Top Management</field>
            <field name="implied_ids" eval="[(3, ref('hr.group_hr_user'))]"/>
            <field name="category_id" ref="appness_hr_settings"/>
        </record>

        <record id="group_manage_top_management_rule" model="ir.rule">
            <field name="name">Manage top Management rule</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="groups" eval="[(4, ref('o_employee_restrict_access.group_manage_top_management'))]"/>
            <field name="domain_force">[(1,'=',1),('is_top_management','=',True)]</field>
        </record>


        <record id="group_employee_own_record_user_rule" model="ir.rule">
            <field name="name">Employee officer profile rule</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="domain_force">[(1,'=',1),('is_top_management','=',False)]</field>
        </record>

    </data>
</odoo>