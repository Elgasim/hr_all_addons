<odoo>
    <data>

        <!-- Form -->
        <record id="view_employee_rotation_form" model="ir.ui.view">
            <field name="name">employee.rotation.form</field>
            <field name="model">employee.rotation</field>
            <field name="arch" type="xml">
                <form string="Employee Rotation">
                    <header>
                        <button name="submit_button" type="object" string="Submit" groups="hr.group_hr_user,hr.group_hr_manager,nus_base.group_department_manager" states="draft" class="oe_highlight" />
                        <button name="line_approve" type="object" string="Line Manager Approve" groups="nus_base.group_department_manager" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'line_manager'),('is_manager','!=',True)]}" />
                        <button name="officer_approve" type="object" string="HR Officer Approve"  groups="hr.group_hr_user" states="line_manager" class="oe_highlight" />
                        <button name="hr_manager_approve" type="object" string="HR Section Head Approve" confirm="Are you sure to confirm this Rotation ?" groups="hr.group_hr_manager" states="hr_manager" class="oe_highlight" />
                        <button name="reject_button" type="object" string="Reject" confirm="Are you sure to Reject this Rotation ?" groups="hr.group_hr_manager" states="hr_manager" />
                        <button name="draft_button" type='object' string="Reset to Draft" groups="hr.group_hr_manager" states="rejected" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,line_manager,hr_officer,hr_manager,approved" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="date" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
                                <field name="effective_date" attrs="{'required': [('state', '=', 'hr_manager')],'readonly': [('state', 'not in', ['hr_manager','approved'])]}" />
                                <field name="approved_date" />
                                <field name="company_id" readonly="1" />
                                <field name="is_manager" invisible="1" />
                                <field name="employee_id" attrs="{'readonly': [('state', 'not in', ['draft'])]}" options="{'no_create': True}" />
                                <field name="department_id" readonly="1" force_save="1" />
                                <field name="n_department_id" attrs="{'readonly': [('state', 'not in', ['draft'])]}" options="{'no_create': True ,'no_open':True}" />
                            </group>

                            <group>
                                <field name="job_id" readonly="1" force_save="1" />
                                <field name="n_job_id" attrs="{'readonly': [('state', 'not in', ['draft'])]}" options="{'no_create': True ,'no_open':True}" />
                                <!-- <field name="gross" readonly="1"/>
                                <field name="apply_new_gross" attrs="{'readonly': [('state', 'not in', ['hr_manager','approved'])]}"/>
                                <field name="new_gross" attrs="{'readonly': [('state', 'not in', ['hr_manager','approved'])],'invisible': [('apply_new_gross', '!=', True)]}"/> -->
                                <field name="is_manager" invisible="1" />

                            </group>
                        </group>

                        <group>
                            <field name="note" attrs="{'readonly': [('state', 'not in', ['draft','hr_manager'])]}" />
                            <field name="hr_comment" attrs="{'required': [('state', '=', 'hr_manager')]}" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <!-- Tree -->
        <record id="view_employee_rotation_tree" model="ir.ui.view">
            <field name="name">employee.rotation.tree</field>
            <field name="model">employee.rotation</field>
            <field name="arch" type="xml">
                <tree string="Employee Rotation">
                    <field name="date" />
                    <!--<field name="company_id"/>-->
                    <field name="employee_id" />
                    <field name="department_id" />
                    <field name="job_id" />
                    <!-- <field name="n_department_id"/> -->
                    <field name="n_job_id" />
                    <field name="note" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <!--kanban-->
        <record model="ir.ui.view" id="view_employee_rotation_kanban">
            <field name="name">employee.rotation.kanban</field>
            <field name="model">employee.rotation</field>
            <field name="arch" type="xml">
                <kanban create="false" import="0" class="o_kanban_mobile">
                    <field name="date" />
                    <field name="employee_id" />
                    <field name="state" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <t t-esc="record.date.value" />
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <t t-esc="record.employee_id.value" />
                                            </span>
                                        </strong>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" />
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_employee_rotation" model="ir.actions.act_window">
            <field name="name">Employee Rotation</field>
            <field name="res_model">employee.rotation</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem name="Employee Rotation" id="employee_rotation_root" parent="hr.menu_hr_root" sequence="10" groups="hr.group_hr_user,hr.group_hr_manager,nus_base.group_department_manager,nus_base.group_md" />

        <menuitem name="Employee Rotation" parent="employee_rotation_root" id="menu_employee_rotation" sequence="1" groups="hr.group_hr_user,hr.group_hr_manager,nus_base.group_department_manager" action="action_employee_rotation" />
        <!-- Smart Button -->
        <record id="view_employee_form_smart_button_rotation" model="ir.ui.view">
            <field name="name">view_employee.form.rotation</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_rotation" icon="fa-arrows-h">
                        <field string="Rotation" name="rotation_count" widget="statinfo" />
                    </button>
                </div>
            </field>
        </record>


    </data>
</odoo>