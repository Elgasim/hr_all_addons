<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='employee_rights_setting_container']" position="after">
                <block title="Hr Extensions" name="hr_extensions_setting_container">
                    <setting help="Allow Transfer Employee Between Companies" title="Allow Transfer Employee Between Companies">
                        <field name="module_o_employee_rotation_multicompany"/>
                    </setting>
                    <setting help="Link Employee to accounting module through cost centers" title="Link Employee to accounting module through cost centers">
                        <field name="module_o_employee_cost_center"/>
                    </setting>
                    <setting help="Enable Employee Restrict Access" title="Enable Employee Restrict Access">
                        <field name="module_o_employee_restrict_access"/>
                    </setting>
                    <setting help="Enable Employee  Documents and Expiry date" title="Enable Employee  Documents and Expiry date">
                        <field name="module_o_employee_documents_expiry"/>
                    </setting>
                    <setting help="Managing entry/exit process" title="Managing entry/exit process">
                        <field name="module_o_employee_check_list"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>

    </data>
</odoo>